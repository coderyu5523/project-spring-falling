{{>layout/sidebar}}

<!-- Main content -->
<main role="main" class="main-body col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="main-container">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt3 pb-2 mb-3 border-bottom">
            <h1 class="h2">앨범 관리</h1>
        </div>

        <div class="button-row">
            <button type="button" class="btn btn-primary">앨범 등록</button>
            <button type="button" class="btn btn-success">앨범 목록</button>
            <button type="button" class="btn btn-info">앨범 검색</button>
        </div>

        <div class="playlist-body">
            <table class="playlist-table">

                <thead>
                <tr>
                    <th><input type="checkbox"></th>
                    <th style="font-size: 12px;">앨범 커버</th>
                    <th style="font-size: 12px;">앨범 제목</th>
                    <th style="font-size: 12px;">아티스트</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {{#albumList}}
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>
                            <a href="#">
                                <img src="..{{albumImg}}" alt="Album Cover">
                            </a>

                        </td>
                        <td>
                            <a href="#">{{albumTitle}}</a>
                        </td>

                        <td class="table-artist">
                            <a href="#">{{artist.name}}</a>
                        </td>
                        <td>
                            <div class="d-flex button-row">
                                <button type="button" class="btn btn-primary">앨범 수정</button>
                                <button type="button" class="btn btn-danger">앨범 삭제</button>
                            </div>
                        </td>
                    </tr>
                {{/albumList}}
                </tbody>
            </table>
        </div>
        <!-- Song registration form -->

    </div>
</main>
</div>
</div>
</body>
</html>
