{{>layout/header}}

<br>
<div class="container">
    <h1>정보관리</h1>
    <div class="user-info d-flex justify-content-between">
        <div class="user-info-left">
            {{#profile}}
                <div class="d-flex">
                    <h2>{{provider}} 계정 회원</h2>
                </div>
                <div>
                    <span class="email">{{email}}</span>
                    <span>|</span>
                    <span class="name">{{subscriptionName}}</span>
                </div>
            {{/profile}}
        </div>
        <div class="user-info-right">
            <button class="purchase-button">이용권 구매</button>
        </div>
    </div>
    <div class="tab-container">
        <div class="tabs">
            <div class="tab active" onclick="activateTab(this)">비밀번호 변경</div>
            <div class="tab" onclick="activateTab(this)">휴대폰 번호 변경</div>
        </div>
        <div class="withdraw-button">회원탈퇴</div>
    </div>
    <div id="tab1" class="content">
        <div class="verification-container">
            <input type="password" id="inputPassword" class="form-control" placeholder="현재 비밀번호" onchange="passwordCheck()">
            <div id="passwordMessage1" class="p-text"></div>
            <input type="password" id="password" class="form-control" placeholder="새 비밀번호">
            <input type="password" id="passwordCheck" placeholder="새 비밀번호 확인" class="form-control" onchange="passwordSameCheck()">
            <div id="passwordMessage2" class="p-text"></div>
            <button id="verifyBtn" onclick="changePassword()">변경완료</button>
        </div>
    </div>

    <script src="/js/profile-password.js"></script>
</div>
{{>layout/footer}}
