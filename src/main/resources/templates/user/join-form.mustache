{{>layout/header}}
<div class="main-container">
    <div class="main-join">
        <div class="join-container">
            <form class="join-form" action="/join" method="post" enctype="application/x-www-form-urlencoded">
                <div class="d-flex justify-content-center">
                    <h4 style="font-weight: 900;">회원가입</h4>
                </div>
                <input class="input-font" type="text" placeholder="아이디(이메일)" required>
